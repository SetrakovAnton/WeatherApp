<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:WeatherApp.Pages"
            x:Class="WeatherApp.Pages.WeatherTabbedPage"
            Shell.TabBarUnselectedColor="Black"
            Shell.TabBarDisabledColor="Black">
    <TabBar>
        <Tab Title="Погода текущего дня">
            <ShellContent ContentTemplate="{DataTemplate local:StartScreen}" />
        </Tab>
        <Tab Title="Погода на неделю">
            <ShellContent ContentTemplate="{DataTemplate local:WeekWeatherScreen}" />
        </Tab>
    </TabBar>
    
</Shell>